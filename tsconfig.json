{
  "compilerOptions": {
      "module": "commonjs",
      "target": "es2018",
      "lib": ["es2018", "dom"],
      "noImplicitAny": false,
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "noEmit": true,
      "skipLibCheck": true
  },
  "include": [
      "src/**/*"
  ],
  "exclude": [
      "node_modules",
      "**/*.spec.ts"
  ]
}
